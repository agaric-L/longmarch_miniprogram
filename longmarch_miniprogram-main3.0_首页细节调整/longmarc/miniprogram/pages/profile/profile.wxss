/* pages/profile/profile.wxss */
.container {
  padding: 32rpx;
  background: #f8f9fa;
  min-height: 100vh;
}

/* 用户信息卡片 */
.user-card {
  background: white;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.08);
}

.user-header {
  display: flex;
  align-items: center;
}

.avatar {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  margin-right: 24rpx;
}

.avatar-placeholder {
  width: 96rpx;
  height: 96rpx;
  border-radius: 48rpx;
  background: #e9ecef;
  margin-right: 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.avatar-text {
  font-size: 24rpx;
  color: #6c757d;
}

.user-info {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #212529;
  margin-bottom: 8rpx;
}

.location {
  display: block;
  font-size: 26rpx;
  color: #6c757d;
}

.login-btn {
  background: #dc3545;
  color: white;
  border-radius: 8rpx;
  padding: 16rpx 32rpx;
  font-size: 28rpx;
  border: none;
  margin-top: 16rpx;
}

/* 数据统计网格 */
.stats-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16rpx;
  margin-bottom: 24rpx;
}

.stat-item {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  text-align: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.stat-number {
  display: block;
  font-size: 36rpx;
  font-weight: 700;
  color: #dc3545;
  margin-bottom: 8rpx;
}

.stat-label {
  display: block;
  font-size: 24rpx;
  color: #6c757d;
}

/* 进度卡片 */
.progress-card {
  background: white;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.progress-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.progress-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #212529;
}

.progress-text {
  font-size: 24rpx;
  color: #6c757d;
}

.progress-bar {
  height: 8rpx;
  background: #e9ecef;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #dc3545;
  border-radius: 4rpx;
  transition: width 0.3s ease;
}

/* 操作按钮 */
.actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  border-radius: 8rpx;
  padding: 20rpx;
  font-size: 28rpx;
  border: none;
  font-weight: 500;
}

.action-btn.primary {
  background: #dc3545;
  color: white;
}

.action-btn.secondary {
  background: #6c757d;
  color: white;
}

.action-btn:active {
  opacity: 0.8;
}
