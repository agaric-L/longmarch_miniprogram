
.container {
  /* 关键：让容器成为相对定位，作为背景图的定位基准 */
  position: relative;
  /* 防止内容被背景图遮挡 */
  z-index: 1;
  /* 其他原有样式保持不变 */
  padding: 16px;
}

.background-image {
  /* 绝对定位，让图片充满整个容器 */
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  /* 将图片置于内容下方 */
  z-index: -1;
  /* 可选：添加透明度让内容更清晰 */
  opacity: 0.2;
}

.script-container {
  max-width: 600px;
  margin: 0 auto;
}

/* 标题样式 */
.title {
  font-size: 22px;
  font-weight: bold;
  text-align: center;
  margin-bottom: 20px;
  color: #c72525;
  padding-bottom: 10px;
  border-bottom: 2px solid #e8e8e8;
}

/* 背景介绍样式 */
.background {
  font-size: 16px;
  line-height: 1.6;
  margin-bottom: 20px;
  padding: 12px;
  background-color: #f5f5f5;
  border-radius: 8px;
}

/* 剧情内容样式 */
.content {
  font-size: 17px;
  line-height: 1.8;
  margin-bottom: 24px;
  text-align: justify;
}

/* 选择项样式 */
.choices {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 30px;
}

.choice-item {
  display: flex;
  align-items: flex-start;
  padding: 15px;
  border: 1px solid #e1e1e1;
  border-radius: 8px;
  background-color: #fafafa;
  cursor: pointer;
  transition: all 0.3s;
}

.choice-item:hover {
  background-color: #f0f7ff;
  border-color: #c9e0ff;
}

.choice-letter {
  font-weight: bold;
  color: #1a73e8;
  min-width: 24px;
}

.choice-text {
  flex: 1;
  font-size: 16px;
  line-height: 1.6;
}

/* 结果提示样式 */
.result {
  padding: 15px;
  margin-bottom: 20px;
  border-radius: 8px;
  line-height: 1.7;
  font-size: 16px;
  background-color: #fff8e1;
  border-left: 4px solid #ffc107;
}

/* 按钮样式 */
.actions {
  display: flex;
  justify-content: center;
  gap: 15px;
  margin-top: 20px;
}

.back-btn {
  background-color: #f5f5f5;
  color: #333;
}

.next-btn {
  background-color: #c72525;
  color: white;
}

.return-btn {
  margin-top: 30px;
  background-color: #c72525;
  color: white;
  width: 100%;
  padding: 12px 0;
}

button {
  padding: 10px 20px;
  border-radius: 6px;
  font-size: 16px;
  line-height: 1.4;
}