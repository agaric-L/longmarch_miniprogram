<view class="container">
  <map
    id="map"
    style="width: 100%; height: 100vh;"
    latitude="{{latitude}}"
    longitude="{{longitude}}"
    scale="{{scale}}"
    markers="{{markers}}"
    polyline="{{polyline}}"
    enable-3D="true"
    enable-satellite="{{satellite}}"
    show-location="true"
    bindmarkertap="onMarkerTap"
  />

  <view class="fab-group">
    <button class="fab" size="mini" bindtap="toggleSatellite">{{satellite ? '标准' : '卫星'}}</button>
    <button class="fab" size="mini" bindtap="goChapters">章节</button>
    <button class="fab" size="mini" bindtap="goTimeline">时间线</button>
    <button class="fab" size="mini" bindtap="goChallenge">挑战</button>
  </view>
</view> 